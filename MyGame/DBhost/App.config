<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
    </startup>
  <system.serviceModel>
    <services>
      <service name="DBservice.DBservice" behaviorConfiguration="mexBehavior">
        <endpoint address="http://localhost:8100/MyDBservice" binding="basicHttpBinding" contract="Contracts.IDbService">
        </endpoint>
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="mexBehavior">
          <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8100/MyDBservice/Help"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>
